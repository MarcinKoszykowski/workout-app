{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "globals": {
    "document": true,
    "window": true,
    "localStorage": true
  },
  "rules": {
    "import/no-unresolved": 1,
    "camelcase": [1, { "properties": "never" }],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js"]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": "src",
        "extensions": [".js"]
      }
    }
  }
}
